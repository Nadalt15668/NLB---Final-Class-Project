<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/nlb_bground"
    tools:context=".parents_register">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:fontFamily="@font/ozrad_bold"
                android:gravity="center_horizontal"
                android:text="@string/הורים_הרשמה"
                android:textColor="@android:color/white"
                android:textSize="30sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="30dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/fstNameEditTxt"
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:hint="שם פרטי"
                        android:textColor="@android:color/white"
                        android:inputType="textPersonName"
                        android:textColorHint="@android:color/white"
                        android:backgroundTint="@android:color/white"
                        android:textSize="20sp"
                        />

                    <TextView
                        android:id="@+id/fstNameTxtView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/ozrad_bold"
                        android:text="@string/שם_פרטי"
                        android:textColor="@android:color/white"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/lstNameEditTxt"
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:hint="שם משפחה"
                        android:textColor="@android:color/white"
                        android:inputType="textPersonName"
                        android:textColorHint="@android:color/white"
                        android:backgroundTint="@android:color/white"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/lstNameTxtView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/ozrad_bold"
                        android:text="@string/שם_משפחה"
                        android:textColor="@android:color/white"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/idEditTxt"
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:hint="מספר זהות"
                        android:textColor="@android:color/white"
                        android:inputType="number"
                        android:textColorHint="@android:color/white"
                        android:backgroundTint="@android:color/white"
                        android:textSize="20sp"
                        />

                    <TextView
                        android:id="@+id/idTxtView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/ozrad_bold"
                        android:text="@string/מס_זהות"
                        android:textColor="@android:color/white"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/emailEditTxt"
                        android:layout_width="190dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:hint="אימייל"
                        android:textColor="@android:color/white"
                        android:inputType="textEmailAddress"
                        android:textColorHint="@android:color/white"
                        android:backgroundTint="@android:color/white"
                        android:textSize="20sp"
                        />

                    <TextView
                        android:id="@+id/emailTxtView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/ozrad_bold"
                        android:text="@string/אימייל"
                        android:textColor="@android:color/white"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/passwordEditTxt"
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:hint="סיסמא"
                        android:textColor="@android:color/white"
                        android:inputType="textPassword"
                        android:textColorHint="@android:color/white"
                        android:gravity="end"
                        android:backgroundTint="@android:color/white"
                        android:textSize="20sp"
                        />

                    <TextView
                        android:id="@+id/passwordTxtView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/ozrad_bold"
                        android:text="@string/סיסמא"
                        android:textColor="@android:color/white"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/cityEditTxt"
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:hint="עיר מגורים"
                        android:textColor="@android:color/white"
                        android:inputType="textPersonName"
                        android:textColorHint="@android:color/white"
                        android:backgroundTint="@android:color/white"
                        android:textSize="20sp"
                        />

                    <TextView
                        android:id="@+id/cityTxtView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/ozrad_bold"
                        android:text="@string/עיר_מגורים"
                        android:textColor="@android:color/white"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/addressEditTxt"
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:hint="רחוב ומספר"
                        android:textColor="@android:color/white"
                        android:inputType="textPersonName"
                        android:textColorHint="@android:color/white"
                        android:backgroundTint="@android:color/white"
                        android:textSize="20sp"
                        />

                    <TextView
                        android:id="@+id/addressTxtView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/ozrad_bold"
                        android:text="@string/רחוב_ומספר"
                        android:textColor="@android:color/white"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:orientation="horizontal">


                    <Spinner
                        android:id="@+id/homeBranch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:popupBackground="@color/nlb_blue"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/homeBranchTxtView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/ozrad_bold"
                        android:text="@string/סניף"
                        android:textColor="@android:color/white"
                        android:layout_gravity="center"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/phoneEditTxt"
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:hint="מספר טלפון"
                        android:inputType="number"
                        android:textColor="@android:color/white"
                        android:textColorHint="@android:color/white"
                        android:backgroundTint="@android:color/white"
                        android:textSize="20sp"
                        />

                    <TextView
                        android:id="@+id/phoneTxtView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/ozrad_bold"
                        android:text="@string/מס_טלפון"
                        android:textColor="@android:color/white"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/profile"
                        android:layout_width="130dp"
                        android:layout_height="130dp"
                        android:layout_gravity="center_horizontal"
                        tools:srcCompat="@drawable/nlb_logo_removedbg" />

                    <Button
                        android:id="@+id/btnPick"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="11dp"
                        android:background="@drawable/button_design"
                        android:fontFamily="@font/ozrad_bold"
                        android:text="@string/בחירת_תמונה"
                        android:textColor="@android:color/white"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <RadioGroup
                    android:id="@+id/rdgb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical">


                    <RadioButton
                        android:id="@+id/maleRadiob"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/ozrad_bold"
                        android:text="@string/זכר"
                        android:textColor="@android:color/white"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <RadioButton
                        android:id="@+id/femaleRadiob"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/ozrad_bold"
                        android:text="@string/נקבה"
                        android:textColor="@android:color/white"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </RadioGroup>
            </LinearLayout>

            <Button
                android:id="@+id/btnDate"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:background="@drawable/button_design"
                android:fontFamily="@font/ozrad_bold"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:text="@string/בחירת_תאריך" />

            <Button
                android:id="@+id/btnSave"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/button_design"
                android:fontFamily="@font/ozrad_bold"
                android:text="@string/סיום"
                android:textColor="@android:color/white"
                android:textSize="30sp"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>


</LinearLayout>