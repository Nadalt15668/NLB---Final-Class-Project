<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/nlb_bground"
    tools:context=".children_update">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/add_child_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="60dp"
                android:fontFamily="@font/ozrad_bold"
                android:text="@string/עדכון_נתונים"
                android:textColor="@android:color/white"
                android:textSize="40sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="30dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/fstNameChildUpd"
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@android:color/white"
                        android:hint="שם פרטי"
                        android:inputType="textPersonName"
                        android:textColor="@android:color/white"
                        android:textColorHint="@android:color/white"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/fstNameTxtView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/ozrad_bold"
                        android:text="@string/שם_פרטי"
                        android:textColor="@android:color/white"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/lstNameChildUpd"
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@android:color/white"
                        android:hint="שם משפחה"
                        android:textColor="@android:color/white"
                        android:inputType="textPersonName"
                        android:textColorHint="@android:color/white"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/lstNameTxtView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/ozrad_bold"
                        android:text="@string/שם_משפחה"
                        android:textColor="@android:color/white"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/idChildUpd"
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:backgroundTint="@android:color/white"
                        android:hint="מספר זהות"
                        android:textColor="@android:color/white"
                        android:inputType="number"
                        android:textColorHint="@android:color/white"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/idTxtView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/ozrad_bold"
                        android:text="@string/מס_זהות"
                        android:textColor="@android:color/white"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/classNumberChildUpd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@android:color/white"
                        android:hint="@string/מספר"
                        android:textColor="@android:color/white"
                        android:inputType="number"
                        android:textColorHint="@android:color/white"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/classLetterTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/ozrad_bold"
                        android:text="- '"
                        android:textColor="@android:color/white"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/classLetterChildUpd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@android:color/white"
                        android:hint="כיתה"
                        android:textColor="@android:color/white"
                        android:inputType="textPersonName"
                        android:textColorHint="@android:color/white"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/classTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/ozrad_bold"
                        android:text="@string/כיתה"
                        android:textColor="@android:color/white"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/schoolChildUpd"
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@android:color/white"
                        android:hint="בית ספר"
                        android:textColor="@android:color/white"
                        android:inputType="textPersonName"
                        android:textColorHint="@android:color/white"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/schoolTxtView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/ozrad_bold"
                        android:text="@string/בית_ספר"
                        android:textColor="@android:color/white"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/emailChildUpd"
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:backgroundTint="@android:color/white"
                        android:hint="אימייל (לא חובה)"
                        android:textColor="@android:color/white"
                        android:inputType="textEmailAddress"
                        android:textColorHint="@android:color/white"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/emailTxtView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/ozrad_bold"
                        android:text="@string/אימייל"
                        android:textColor="@android:color/white"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:orientation="horizontal">


                    <Spinner
                        android:id="@+id/homeBranchChildUpd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:popupBackground="@color/nlb_blue"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/homeBranchTxtView"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:fontFamily="@font/ozrad_bold"
                        android:text="@string/סניף"
                        android:textColor="@android:color/white"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/phoneChildUpd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:backgroundTint="@android:color/white"
                        android:hint="מספר טלפון (לא חובה)"
                        android:inputType="number"
                        android:textColor="@android:color/white"
                        android:textColorHint="@android:color/white"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/phoneTxtView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/ozrad_bold"
                        android:text="@string/מס_טלפון"
                        android:textColor="@android:color/white"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

            <Button
                android:id="@+id/btnDateChildUpd"
                android:layout_width="175dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/button_design"
                android:fontFamily="@font/ozrad_bold"
                android:text="@string/בחירת_תאריך"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/profileChildUpd"
                        android:layout_width="130dp"
                        android:layout_height="130dp"
                        android:layout_gravity="center_horizontal"
                        tools:srcCompat="@drawable/nlb_logo_removedbg" />

                    <Button
                        android:id="@+id/btnPickChildUpd"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="11dp"
                        android:background="@drawable/button_design"
                        android:fontFamily="@font/ozrad_bold"
                        android:text="@string/בחירת_תמונה"
                        android:textColor="@android:color/white"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <RadioGroup
                    android:id="@+id/rdgbChildUpd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical">


                    <RadioButton
                        android:id="@+id/boyRadiobUpd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/ozrad_bold"
                        android:text="@string/ילד"
                        android:textColor="@android:color/white"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <RadioButton
                        android:id="@+id/girlRadiobUpd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/ozrad_bold"
                        android:text="@string/ילדה"
                        android:textColor="@android:color/white"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnRemoveChild"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/button_design_remove"
                    android:fontFamily="@font/ozrad_bold"
                    android:text="@string/מחיקה"
                    android:textColor="@android:color/white"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btnSaveChildUpd"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/button_design"
                    android:fontFamily="@font/ozrad_bold"
                    android:text="@string/עדכון_נתונים"
                    android:textColor="@android:color/white"
                    android:textSize="30sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>